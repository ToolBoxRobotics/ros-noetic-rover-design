
<launch>

  <!-- Keyboard teleop -->
  <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py"
        name="keyboard_teleop" output="screen">
    <remap from="/cmd_vel" to="/cmd_vel"/>
  </node>

  <!-- Joystick driver -->
  <node pkg="joy" type="joy_node" name="joy_node" output="screen">
    <param name="dev" value="/dev/input/js0"/>
    <param name="deadzone" value="0.15"/>
  </node>

  <!-- Joystick to cmd_vel -->
  <node pkg="teleop_twist_joy" type="teleop_node" name="joy_teleop" output="screen">
    <remap from="/cmd_vel" to="/cmd_vel"/>
    <rosparam>
      axis_linear: 1
      scale_linear: 1.0
      axis_angular: 3
      scale_angular: 1.0
      enable_button: 5     # RB
    </rosparam>
  </node>

</launch>
